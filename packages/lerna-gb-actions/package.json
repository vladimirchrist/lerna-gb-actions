{
  "name": "lerna-gb-actions",
  "version": "1.0.0",
  "private": false,
  "description": "Github actions with lerna",
  "scripts": {
    "prepack": "npm run build",
    "build": "rollup -c ",
    "watch": "rollup -cw ",
    "types:check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext .tsx,.ts . --fix",
    "lint-staged": "lint-staged --config .lintstagedrc.json",
    "format:check": "prettier . --ignore-path .gitignore --check",
    "format:fix": "prettier . --ignore-path .gitignore --write",
    "validate": "npm-run-all --parallel types:check format:check lint-staged"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.esm.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "/lib"
  ]
}
